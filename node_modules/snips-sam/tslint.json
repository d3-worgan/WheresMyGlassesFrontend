{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-airbnb"
    ],
    "jsRules": {},
    "eslint.packageManager": "yarn",
    "rules": {
        "semicolon": [true, "never"],
        "ter-arrow-parens": [true, "as-needed"],
        "ter-indent": [
            true, 4, {"SwitchCase": true}
        ],
        "max-line-length": false
    },
    "rulesDirectory": []
}
