{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": false,
        "experimentalDecorators": true,
        "importHelpers": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./lib",
        "preserveConstEnums": true,
        "removeComments": true,
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictPropertyInitialization": false,
        "target": "es2016",
        "typeRoots": [ "./node_modules/@types" ],
        "watch": true,
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.test.ts",
        "docs"
    ]
}
