{
    // "typescript.tsserver.trace": "verbose",
    "editor.trimAutoWhitespace": true,
    "search.exclude": {
      "**/node_modules": true,
      "lib/**/*": true
    },
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true
    },
    "editor.tabSize": 4,
    "tslint.configFile": "tslint.json",
    "tslint.enable": true,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "eslint.enable": false
  }
